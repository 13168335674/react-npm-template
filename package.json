{
  "name": "custom-package-name",
  "version": "0.0.1",
  "description": "",
  "keywords": [],
  "homepage": "https://github.com/xxx/xxx#readme",
  "bugs": {
    "url": "https://github.com/xxx/xxx/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xxx/xxx.git"
  },
  "license": "MIT",
  "author": "xxxx <xxx@xxx.com>",
  "sideEffects": [
    "dist/index.css"
  ],
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "README.md",
    "global.d.ts"
  ],
  "workspaces": [
    "playground"
  ],
  "scripts": {
    "build": "tsup && npm run build:css",
    "build:css": "postcss src/styles/index.css > dist/index.css",
    "build:storybook": "build-storybook",
    "build:vite": "vite build && npm run build:css",
    "dev": "concurrently \"npm run build:css-watch\" \"npm run dev --workspace playground\"",
    "lint": "eslint src/**/*.{ts,tsx} --ext .ts,.tsx",
    "prepare": "chmod +x .husky/* && husky install",
    "prepublishOnly": "npm run build",
    "tag": "bumpp --commit --tag --push",
    "release": "npm publish",
    "storybook": "start-storybook -p 6006",
    "stylelint": "stylelint src/**/*.css",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/plugin-transform-runtime": "^7.18.9",
    "@swc/core": "^1.2.218",
